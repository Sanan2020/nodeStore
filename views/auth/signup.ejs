<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sign Up</title>

    <!-- Bootstrap 5 CDN -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- FontAwesome Icons CDN -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">

    <style>
        /* Custom CSS */
        body,
        html {
            height: 100%;
            margin: 0;
            background-color: #f2f2f5;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .signup-container {
            background-color: white;
            padding: 40px;
            border-radius: 10px;
            box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
            width: 100%;
            max-width: 500px;
        }

        .signup-container h2 {
            margin-bottom: 30px;
            text-align: center;
        }

        .signup-container .form-label {
            font-weight: bold;
        }

        .signup-container .btn {
            width: 100%;
        }
    </style>
</head>

<body>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <% if (messages.error) { %>
        <script>
          Swal.fire("ผิดพลาด!", "<%= messages.error %>", "error");
        </script>
      <% } %>

    <div class="signup-container">
        <h2>ลงทะเบียน</h2>
        <form id="signup-form" action="/signup" method="post">
            <div class="mb-3">
                <label for="email" class="form-label">อีเมล</label>
                <input type="email" name="email" id="email" class="form-control" placeholder="ป้อนอีเมล" required>
            </div>
            <div class="mb-3">
                <label for="password" class="form-label">รหัสผ่าน</label>
                <input type="password" name="password" id="password" class="form-control" placeholder="ป้อนหัสผ่าน" required>
            </div>
            <div class="mb-3">
                <label for="confirm-password" class="form-label">ยืนยันรหัสผ่าน</label>
                <input type="password" id="confirm-password" class="form-control" placeholder="ป้อนหัสผ่านอีกครั้ง"
                    required>
            </div>
            <div class="d-grid">
                <button type="submit" class="btn btn-primary">ลงทะเบียน</button>
            </div>
            <div class="mt-3 text-center">
                <p>มีบัญชีอยู่แล้ว? <a href="/login">เข้าสู่ระบบที่นี่</a></p>
            </div>
        </form>
    </div>


    <!-- Bootstrap 5 JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        // Dummy form submission logic
        document.getElementById("signup-form").addEventListener("submit", function (event) {
            event.preventDefault();

            const email = document.getElementById("email").value;
            const password = document.getElementById("password").value;
            const confirmPassword = document.getElementById("confirm-password").value;

            if (password.length < 8) {
                Swal.fire("ผิดพลาด!", "รหัสผ่านต้องมีความยาวอย่างน้อย 8 ตัวอักษร", "error");
                return;
            }
            if (password !== confirmPassword) {
                Swal.fire("ผิดพลาด!", "รหัสผ่านไม่ตรงกัน โปรดลองอีกครั้ง", "error");
                return;
            }
            const form = document.getElementById("signup-form");
            form.submit(); // ส่งฟอร์มโดยตรงไปยัง action URL
        });
    </script>

</body>

</html>