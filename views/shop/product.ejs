<!DOCTYPE html>
<html lang="en">

<head>
    <!-- Bootstrap 5 CDN -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Bootstrap 5 JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="/js/cart.js"></script>
    
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <style>
        .card {
            box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2);
            font-family: arial;
        }

        .price {
            color: grey;
            font-size: 22px;
        }

        .card button:hover {
            opacity: 0.7;
        }

        .mo-img {
            width: 100%;
            height: auto;
            /*object-fit: cover; */
        }
        .button-add {
            width: 30%;

            padding: 10px;
            color: white;
            background-color: #000;
            text-align: center;
            cursor: pointer;
            font-size: 18px;
        }

        .tohome {
            width: 30%;
            padding: 10px;
        }
        .checked {
            color: orange;
        }

        @media screen and (max-width: 1199px) {
            .button-add, .tohome{
                width: 100%;
            }
        }

        @media screen and (max-width: 767px) {
            .mo-bo {
                /* max-width: 325px; */
            }
            .mo-img {
                /* max-width: 325px; */
            }
        }
    </style>
    <!-- Font Awesome Icon Library -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
</head>

<body>
    <div class="container" style="margin-top: 136px;">
        <% if(product){ %>
        <div class="card mt-4">
            <div class="row row-cols-1 row-cols-md-2">

                <div class="col-xl-4" style="display: flex; justify-content: center;">
                    <img class="mo-img" src="/image/<%= product.image %>" alt="">
                </div>

                <div class="col-xl-8" style="display: flex; justify-content: center;">
                    <div class="card-body mo-bo d-flex flex-column justify-content-between">

                        <div>
                            <h2><%= product.name %></h2>

                            <div style="margin-top: 20px;">
                                <span class="fa fa-star checked"></span>
                                <span class="fa fa-star checked"></span>
                                <span class="fa fa-star checked"></span>
                                <span class="fa fa-star"></span>
                                <span class="fa fa-star"></span>
                            </div>

                            <p style="margin-top: 20px;"><%= product.description %></p>
                        </div>

                        <div>
                            <p class="price">฿<%= product.price %></p>
                            <p><button onclick="addtocart('<%= JSON.stringify(product) %>');" class="btn btn-dark button-add">Add to Cart</button></p>
                            <a class="btn btn-outline-danger tohome" href="/">Home</a>
                        </div>
                        <!-- addtocart2('<%= product._id %>'); -->
                    </div>
                </div>
            </div>

        </div>
        <%}%>
        </div>


