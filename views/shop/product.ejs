    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            /* display: flex; */

        }

        .card {
            /* box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2); */
            /* max-width: 600px; */
            /* margin: auto; */
            /* text-align: center; */
            font-family: arial;

            /* display: flex; */
            /* flex-direction: row; */
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        .price {
            color: grey;
            font-size: 22px;
        }

        .card button {
            border: none;
            outline: 0;
            padding: 12px;
            color: white;
            background-color: #000;
            text-align: center;
            cursor: pointer;
            width: 100%;
            font-size: 18px;
        }

        .card button:hover {
            opacity: 0.7;
        }

       

        /* 1199 - 768 */
        @media (max-width: 1399px) and (min-width: 768px) {
            .mo-img {
                
               width: 257px;
               /* height: 270px; */
            }
            
        }

        @media screen and (max-width: 767px) {
            .mo-bo{
                max-width: 325px;
            }
            .mo-img{
                max-width: 325px;
            }
        }
    </style>

</head>

<body>
    <div class="container" style="margin-top: 136px; background: 0;">
        <% if(product){ %>
        <div class="card mt-4" style="background: 0;">
            <div class="row row-cols-1 row-cols-md-2">

                <div class="col-xl-4" style="background: #f17474; display: flex; justify-content: center;">
                    <img class="mo-img" src="/image/<%= product.image %>" alt="">
                </div>


                <div class="col-xl-8" style="background:#7ef174; display: flex; justify-content: center;">
                    <div class="card-body mo-bo" style="background: 0; ">
                        <h2 style="background: 0;"><%= product.name %></h2>
                        <p><%= product.description %></p>
                        <p class="price">฿<%= product.price %></p>
                        <p><button style="max-width: 293px;">Add to Cart</button></p>
                    </div>

                </div>
            </div>

        </div>
        <%}%>
        </div>


